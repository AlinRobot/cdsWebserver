<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.pesc.edexchange.v1_0">
   
   <class name="OrganizationCredential" table="organization_credential" catalog="${hibernate.catalog}">
    <meta attribute="class-description">
        This table is derived from the OrganizationCredential schema defined in EdExchangeEnvelope_v1.0.7.xsd
    </meta>
    <id type="int" column="authentication_id">
        <generator class="native" />
    </id>
    <property name="username" column="username" type="string" not-null="true" />
    <property name="password" column="password" not-null="true" type="string" />
    <property name="enabled" column="enabled" type="boolean" not-null="true" />
    <property name="publicKey" column="public_key" not-null="true" type="string" />
    <property name="digitalSignature" column="digital_signature" not-null="true" type="string" />
    <property name="authenticationType" column="authentication_type" not-null="true" type="string" />
    
    <many-to-one name="directory" column="directory_id" class="Organization" not-null="true" lazy="false" />
    
    <property name="createdTime" column="created_time" type="timestamp" update="false" insert="false" generated="always" />
	<property name="modifiedTime" column="modified_time" type="timestamp" update="false" insert="false" generated="always" />
    
   </class>
</hibernate-mapping>